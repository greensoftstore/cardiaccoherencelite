<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableRow3"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:gravity="left"
    android:weightSum="40" >

    <TextView
        android:id="@+id/startTimeSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:gravity="left" 
        android:textAppearance="?android:attr/textAppearanceMedium"
         android:textSize="12sp"
        android:textColor="@color/ActionBarText" />

    <TextView
        android:id="@+id/cyclesSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="left" 
        android:textAppearance="?android:attr/textAppearanceMedium"
         android:textSize="12sp"
        android:textColor="@color/ActionBarText"/>

    <TextView
        android:id="@+id/ratioSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="left" 
        android:textAppearance="?android:attr/textAppearanceMedium"
         android:textSize="12sp"
        android:textColor="@color/ActionBarText"/>

    <TextView
        android:id="@+id/durationSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:gravity="left" 
        android:textAppearance="?android:attr/textAppearanceMedium"
         android:textSize="12sp"
        android:textColor="@color/ActionBarText"/>
    <TextView
        android:id="@+id/heartStartSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp"
        android:textColor="@color/ActionBarText"/>
    <TextView
        android:id="@+id/heartEndSession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="left"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="12sp"
        android:textColor="@color/ActionBarText"/>
</TableRow>