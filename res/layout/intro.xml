<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Next"
    android:color="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mforget_corder_blueapp_style">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/colorApp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/intro"
                android:textAlignment="center"
                android:gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color2"
                android:textSize="20sp"
                 />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/card1"
        android:layout_marginBottom="@dimen/_90sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|top">

            <androidx.cardview.widget.CardView
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorApp"
                android:padding="7dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mfoget_border_corner_white_style"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textintro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView1"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingTop="0dp"
                        android:text="@string/intro11"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color2"
                        android:textSize="12sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorApp"
                android:padding="7dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mfoget_border_corner_white_style"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textintro2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textintro"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="16dp"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingTop="5dp"
                        android:text="@string/intro12"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color2"
                        android:textSize="12sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/second"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorApp"
                android:padding="7dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/mfoget_border_corner_white_style"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textintro3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textintro2"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="16dp"
                        android:drawableRight="@drawable/goutte3"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:paddingTop="5dp"
                        android:text="@string/intro13"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/color2"
                        android:textSize="12sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/colorApp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/nextIntro"
                style="@style/btnStyleShakespeare"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:background="@drawable/icon_next"
                android:textColor="@color/color2"
                android:textSize="14sp" />

            <Button
                android:id="@+id/cancelbutton"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/mfoget_border_corner_white_style"
                android:text="@string/skip"
                android:textColor="@color/color2"
                android:textSize="12sp" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>